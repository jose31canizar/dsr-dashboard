.legend-container
  .legend
    :nth-child(1)
      border-radius: 50% !important
    :nth-child(2)
      font-family: 'Avenir'
      font-size: 0.7em
.react-d3-core__container_title
  font-family: 'Avenir'
  font-size: 0.8em !important
  padding: 0 !important
  width: auto !important

.react-d3-core__label[transform="rotate(270)"]
  transform: translate(-30px) rotate(270deg)

.react-d3-core__label
  font-family: 'Avenir'

.dual-chart
  display: flex
  width: 100%
  @media all and (max-width: 1150px)
    flex-direction: column
    align-items: center
  .single-chart
    @media all and (max-width: 1150px)
      width: 100%

