.checkbox-item
    position: relative
    display: flex
    align-items: flex-end
    .checkbox
      width: 18px
      height: 18px
      cursor: pointer
      .svg-icon
        position: absolute
        left: 1px
        top: -3px
      input[type=checkbox]
        position: absolute
        -webkit-appearance: none
        width: 10px
        height: 10px
        transition: all 0.5s ease;
        outline: none
        cursor: pointer
        box-shadow: 0 0 3px 1px #d4c6c6;
    label
      padding-left: 4px
      font-size: 0.7em