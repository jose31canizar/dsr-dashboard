.home
  width: 100%;
  background: #fff;
  padding: 10px;
  box-shadow: 0px 0px 31px 1px #a2959587;
  .slider
    width: 25%
    input[type="range"]
      width: 100%
    .time-scale-text
      display: flex
      justify-content: space-between
      font-family: 'Avenir'
  .stats
    width: 100%
    display: flex;
    justify-content: center;
    .statistic
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      padding: 20px
      h1
        font-weight: 900
        margin: 12px
      h3
        margin: 0
        font-weight: 200;
        font-variant: all-small-caps;
        color: #bbbbd0;